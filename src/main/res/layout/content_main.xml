<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#000000"
tools:context="com.example.nicholas.myapplication01.MainActivity">

<ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="600dp"
    android:scaleType="center"
    android:src="@drawable/background" />

<TextView
    android:text="Tennis Time!"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:textSize="40sp"
    android:fontFamily="sans-serif-light"
    android:textColor="#FFFFFF"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="93dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/racket02" />

            <Button
                android:onClick="Equipment"
                android:layout_centerHorizontal="true"
                android:text="Equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ball" />

            <Button
                android:onClick="Rules"
                android:layout_centerHorizontal="true"
                android:text="Rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/court" />

            <Button
                android:onClick="TypesOfCourts"
                android:layout_centerHorizontal="true"
                android:text="Types Of Courts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/trophy" />

            <Button
                android:onClick="Champions"
                android:layout_centerHorizontal="true"
                android:text="Champions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:onClick="Scoring"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:text="Scoring"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
