<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.nicholas.myapplication01.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/background" />

    <TextView
        android:text="Tennis Time!"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textSize="40sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Rules"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView" />

    <TextView
        android:text="        For a singles match: Server begins on the right side.

        Server must hit the ball into the service box cross-court from them.

        Server gets two attempts to get the ball in the box unless a 'let' is called.

        Rally starts after the first bounce from the server's initial hit.

        The ball is considered 'in bounds' if it lands in or on the court lines."
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView" />

</RelativeLayout>
